<h1>{{pagetitle}}</h1>


<div class="productcard">
    {{#each products}}
        <div class="productcard">
            {{#if this.img.data}}
            <p><img src="data:{{this.img.contentType}};base64,{{base64 this.img.data}}" width="50%"/></p>
            {{/if}}
            <p>Tuote: {{this.product}}</p>
            <p>Hinta: {{this.price}}€</p>
            <p>Tuotekuvaus: {{this.description}}</p>
            <p>Koko: {{this.size}}</p>
            <form action="" method="POST">
                <input type="hidden" name="" value="">
                <button type="submit">Lisää ostoskoriin</button>
            </form>
        </div>
    {{/each}}
</div>
<br>
<form action="" method="POST">
    <input type="hidden" name="" value="">
    <button type="submit">Siirry ostoskoriin</button>
</form>