<h1>{{pagetitle}}</h1>

<div class="card">
    <form method="POST" action="/addproduct" enctype="multipart/form-data">
        <label><h2>Create new product</h2></label>
        <br>
        <p><label for="productName">Name of your product:</label></p>
        <input type="text" name="product" id="productName">
        <br><br>
        <p><label for="productPrice">Price of your product:</label></p>
        <input type="number" name="price" id="productPrice">
        <br><br>
        <p><label for="productDescription">Description of your product:</label></p>
        <input type="text" name="description" id="productDescription">
        <br><br>
        <p><label for="productSize">Size of your product:</label></p>
        <input type="text" name="size" id="productSize">
        <p>Upload an image</p><input type="file" name="image" value="">
        <br><br>
        <button type="submit">Submit</button>
    </form>
</div>

<div class="cards">
    {{#each products}}
        <div class="card">
            {{#if this.img.data}}
            <p><img src="data:{{this.img.contentType}};base64,{{base64 this.img.data}}" width="40%" height="40%"/></p>
            {{/if}}
            <h2>{{this.product}}</h2>
            <h2>{{this.price}}</h2>
            <h2>{{this.description}}</h2>
            <h2>{{this.size}}</h2>
        </div>
    {{/each}}
</div>
</div>
